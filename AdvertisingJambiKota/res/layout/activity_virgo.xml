<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:onClick="virgo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tgsakhir.advertisingjambikota.Virgo" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="500dp"
                android:baselineAligned="false"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:text="              VIRGO ADVERTISING"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Virgo advertising perusahaan outdoor indoor promotion media melayani Digital Printing, Advertising, Percetakan, Sablon, Konveksi "
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/virgo2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alamat : JL. slamet riyadi broni - jambi "
                    android:textSize="14sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no tlp : 0741-7550096 / 085266469643"
                    android:textSize="14sp"
                    android:typeface="serif" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:onClick="peta"
            android:text="LOKASI" />
    </LinearLayout>

</ScrollView>
